doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Countries Flags
    body
        header.header
            h1.header__heading Countries Flags (Hover/Tap for effect)
        main
            section.flags
                ul.flags__list
                    li.list__item
                        figure.item__flag
                            img(src="../assets/images/ukraine.png" alt="Flag of Ukraine").flag__image
                            figcaption.flag__description Ukraine
                    li.list__item
                        figure.item__flag
                            img(src="../assets/images/japan.png" alt="Flag of Japan").flag__image
                            figcaption.flag__description Japan
                    li.list__item
                        figure.item__flag
                            img(src="../assets/images/iceland.png" alt="Flag of Iceland").flag__image
                            figcaption.flag__description Iceland
                    li.list__item
                        figure.item__flag
                            img(src="../assets/images/czech.png" alt="Flag of Czech Republic").flag__image
                            figcaption.flag__description Czech Republic